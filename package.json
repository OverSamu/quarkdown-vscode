{
  "name": "quarkdown-vscode",
  "displayName": "Quarkdown",
  "description": "Quarkdown Language Support",
  "icon": "images/icon.png",
  "version": "0.1.2",
  "publisher": "Quarkdown",
  "repository": {
    "type": "git",
    "url": "https://github.com/quarkdown-labs/quarkdown-vscode"
  },
  "engines": {
    "vscode": "^1.100.0",
    "node": ">=18"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "quarkdown",
        "aliases": [
          "Quarkdown"
        ],
        "extensions": [
          ".qd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "quarkdown",
        "scopeName": "text.quarkdown",
        "path": "./syntaxes/quarkdown-tm-grammar/syntaxes/quarkdown.tmLanguage"
      }
    ],
    "commands": [
      {
        "command": "quarkdown.insertTemplate",
        "title": "Insert Template"
      },
      {
        "command": "quarkdown.startPreview",
        "title": "Live Preview"
      },
      {
        "command": "quarkdown.stopPreview",
        "title": "Stop Live Preview"
      },
      {
        "command": "quarkdown.restartLanguageServer",
        "title": "Restart Language Server"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "quarkdown.startPreview",
          "when": "resourceExtname == .qd || resourceExtname == .md",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        {
          "command": "quarkdown.startPreview",
          "when": "resourceExtname == .qd || resourceExtname == .md"
        },
        {
          "command": "quarkdown.stopPreview",
          "when": "resourceExtname == .qd || resourceExtname == .md"
        }
      ]
    },
    "configuration": [
      {
        "title": "Quarkdown",
        "properties": {
          "quarkdown.path": {
            "type": "string",
            "default": "quarkdown",
            "description": "Path to Quarkdown"
          }
        }
      },
      {
        "title": "Quarkdown",
        "properties": {
          "quarkdown.completion.enable": {
            "type": "boolean",
            "default": true,
            "description": "Enable autocompletion via Quarkdown Language Server"
          },
          "quarkdown.completion.triggerCharacters": {
            "type": "array",
            "default": [
              "."
            ],
            "description": "Autocompletion trigger characters"
          }
        }
      }
    ]
  },
  "configurationDefaults": {
    "quarkdown": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.4.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}